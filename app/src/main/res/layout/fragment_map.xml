<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.linhongyu.smarter.DisplayMap"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sp_map"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Choose daily or hourly"
            android:entries="@array/selection_array"/>

        <com.mapquest.mapping.maps.MapView
            android:id="@+id/mapquestMapView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="35dp"
            app:mapquest_app_key="cgyVILcsQ99TOHRiHie4EZrvxAUmkkZz" />
    </LinearLayout>

</RelativeLayout>